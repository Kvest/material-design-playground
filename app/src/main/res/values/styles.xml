<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ItemActivity">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/item_activity_shared_enter_transition</item>
        <item name="android:windowSharedElementReenterTransition">@transition/item_activity_shared_return_transition</item>
        <item name="android:windowEnterTransition">@transition/item_activity_enter_transition</item>
        <item name="android:windowReenterTransition">@transition/item_activity_return_transition</item>
    </style>
</resources>
